<%-include("includes/head")%>
<%-include("includes/navbar")%>
<div class="container">
    <div class="row">
        <div class="col-lg-2"></div>
        <div class="col-lg-8 my-3">
            <h1 class="text-center">Criar conta ou Entrar</h1>
            <p class="text-center lead">Faça login ou crie sua conta abaixo</p>
            <%-include("./includes/messages") %>
            <div class="row">
                <div class="col-lg mt-5">
                    <h4>Faça seu cadastro</h4>
                    <p>Se você ainda não tem conta, preencha o formulá abaixo</p>
                    <form action="/login/register" method="post" class="form-cadastro">
                        <input type="hidden" name="_csrf" value="<%=crsfToken%>">
                        <div class="form-group">
                            <label>Seu email</label>
                            <input type="email" class="form-control" name="email">
                        </div>
                        <div class="form-group">
                            <label>Sua senha</label>
                            <input type="password" class="form-control" name="senha">
                        </div>
                        <button type="submit" class="btn btn-primary">Criar minha Conta</button>
                    </form>
                </div>

                
                <div class="col-lg mt-5">
                    <h4>Faça seu login</h4>
                    <p>Se você já tem conta, faça seu login abaixo:</p>
                    <form action="/login/login" method="post" class="form-login">
                        <input type="hidden" name="_csrf" value="<%=crsfToken%>">
                        <div class="form-group">
                            <label>Seu email</label>
                            <input type="email" class="form-control" name="email">
                        </div>
                        <div class="form-group">
                            <label>Sua senha</label>
                            <input type="password" class="form-control" name="senha">
                        </div>
                        <button type="submit" class="btn btn-primary">Entrar</button>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-lg-2"></div>
    </div>
</div>
<%-include("includes/footer")%>